execute if block ~ ~ ~ yellow_stained_glass run tag @s add yellow
execute if block ~ ~ ~ green_stained_glass run tag @s add green
execute if block ~ ~ ~ blue_stained_glass run tag @s add blue
execute if block ~ ~ ~ purple_stained_glass run tag @s add purple